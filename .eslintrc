{
	"extends": [
		"airbnb",
		"prettier",
		"prettier/react",
		"plugin:flowtype/recommended"
	],
	"plugins": [
		"eslint-plugin-prettier",
		"flowtype"
	],
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"jest": true,
		"es6": true
	},
	"rules": {
		"linebreak-style": 0,
		"class-methods-use-this": 0,
		"import/no-named-as-default": 0,
		"react/jsx-curly-brace-presence": [
			2,
			{
				"props": "always"
			}
		],
		"react/display-name": 0,
		"react/prefer-stateless-function": [
			"error",
			{
				"ignorePureComponents": true
			}
		],
		"react/jsx-filename-extension": [
			"error",
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"trailingComma": "none",
				"singleQuote": true,
				"printWidth": 100
			}
		]
	},
	"globals": {
		"__DEV__": true
	}
}