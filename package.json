{
	"name": "reactxp-settings",
	"private": true,
	"main": "index.js",
	"version": "0.0.1",
	"lint-staged": {
		"src/**/*.{js,jsx,json,css,md}": [
			"yarn lint",
			"yarn test",
			"git add"
		]
	},
	"scripts": {
		"rn:cli": "node node_modules/react-native/local-cli/cli.js",
		"start:windows": "yarn rn-cli run-windows",
		"start:web": "cross-env platform=web webpack-dev-server --config=web/webpack/dev.js --progress --colors --mode=development",
		"build:web": "cross-env platform=web webpack --config=web/webpack/prod.js --progress --colors --mode=production",
		"build:android": "yarn prebuild && cd android && gradlew.bat assembleRelease",
		"install:android": "adb install android/app/build/outputs/apk/release/app-release.apk",
		"clean:android": "cd android && gradlew.bat clean",
		"prebuild": "yarn lint src && yarn test",
		"precommit": "lint-staged",
		"lint": "yarn eslint --fix",
		"test": "yarn type:test && yarn unit:test",
		"type:test": "yarn flow",
		"unit:test": "yarn jest --passWithNoTests",
		"test:watch": "yarn unit:test --watch",
		"test:debug": "node --inspect-brk node_modules/.bin/jest -c jest.config.js --runInBand"
	},
	"dependencies": {
		"react": "16.7.0",
		"react-dom": "16.7.0",
		"react-native": "0.57.8",
		"react-native-windows": "0.57.0-rc.5",
		"reactxp": "1.6.0-rc.1"
	},
	"devDependencies": {
		"@babel/core": "^7.3.4",
		"@babel/plugin-proposal-decorators": "^7.3.0",
		"@babel/preset-env": "^7.3.4",
		"@babel/preset-flow": "^7.0.0",
		"babel-eslint": "^10.0.1",
		"babel-loader": "^8.0.5",
		"compression-webpack-plugin": "^2.0.0",
		"enzyme": "^3.9.0",
		"enzyme-adapter-react-16": "^1.10.0",
		"enzyme-to-json": "3.3.5",
		"eslint": "^5.14.1",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-loader": "^2.1.2",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-jest": "^22.3.0",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-react": "^7.12.4",
		"flow-bin": "^0.93.0",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^1.3.1",
		"jest": "^24.1.0",
		"lint-staged": "^8.1.4",
		"metro-react-native-babel-preset": "^0.52.0",
		"prettier-eslint": "^8.8.2",
		"react-test-renderer": "^16.8.3",
		"rnpm-plugin-windows": "^0.2.8",
		"webpack": "^4.29.5",
		"webpack-cli": "^3.2.3",
		"webpack-dev-server": "^3.2.1",
		"webpack-merge": "^4.2.1"
	},
	"jest": {
		"preset": "react-native"
	}
}